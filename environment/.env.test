# SSO Testing Environment Variables
# Update these values with your actual Keycloak configuration

# Keycloak Configuration
TEST_USERNAME=testuser
TEST_PASSWORD=testpass
KEYCLOAK_CLIENT_ID=myclient
KEYCLOAK_CLIENT_SECRET=
KEYCLOAK_BASE_URL=http://localhost:8080/realms/myrealm

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
MICROSERVICE_URL=http://localhost:3002

# Session Configuration
SESSION_SECRET=test_session_secret_replace_in_production

# Development Settings
NODE_ENV=development
DEBUG_AUTH=true

# Additional Configuration
CLIENT_ORIGIN=http://localhost:4200
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4201

# Port Configuration
PORT=3001

# Redis Configuration (optional for testing)
# REDIS_URL=redis://localhost:6379

# SSL Configuration (for production testing)
# SSL_KEY_PATH=/path/to/private-key.pem
# SSL_CERT_PATH=/path/to/certificate.pem

# Logging
LOG_LEVEL=info
